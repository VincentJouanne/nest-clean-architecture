datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {Â 
  id String @id
  password String
  contactInformations ContactInformations @relation(fields: [contactInformationsId], references: [email])
  contactInformationsId String
}

model ContactInformations {
  email String @unique
  verificationCode String
  isVerified Boolean @default(false)
  user User?
}
